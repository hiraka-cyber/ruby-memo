<%= link_to "Create Post" , new_post_path,:class => 'btn btn-primary btn-lg' %>
 <br><br>
 <h1>List of blogs</h1>
 <% @posts.each do |post| %>
 <div class="well">
   <br>
   <h3><%= post.title %></h3>
   <br>
   <p><%= post.body %></p>
   <%= link_to "Read More",post_path(post),:class => 'btn btn-outline-primary' %>
 </div>
 <% end %>
